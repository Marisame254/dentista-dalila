---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Services from "../components/Services.astro";
import Consultorio from "../components/Consultorio.astro";
import Appointments from "../components/Appointments.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";

// CONFIGURACIÓN
const WHATSAPP_NUMBER = "529512183883"; // Formato: Código de país + número (ej: 521234567890)
const CALENDLY_URL = "https://calendly.com/dalilasarai78902/nueva-reunion"; // URL de Calendly
---

<Layout
  title="Dra. Dalila - Consultorio Dental"
  description="Cuidado dental profesional con la Dra. Dalila. Servicios de odontología general, estética dental, ortodoncia e implantes."
>
  <Header />

  <main>
    <Hero />
    <Services />
    <Consultorio />
    <Appointments calendlyUrl={CALENDLY_URL} whatsappNumber={WHATSAPP_NUMBER} />
  </main>

  <Footer />

  <!-- WhatsApp Floating Button -->
  <WhatsAppButton phoneNumber={WHATSAPP_NUMBER} />
</Layout>
