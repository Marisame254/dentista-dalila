---
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="bg-white/80 dark:bg-gray-900/80 backdrop-blur-md shadow-md dark:shadow-gray-900/50 fixed w-full top-0 z-50 transition-colors duration-300"
>
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo/Brand -->
      <a href="#inicio" class="flex items-center space-x-2 group">
        <svg
          class="w-8 h-8 text-teal-600 dark:text-teal-400 transition-transform duration-300 group-hover:scale-110"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <span
          class="text-2xl font-bold text-gray-800 dark:text-white transition-colors"
          >Dra. Dalila</span
        >
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center space-x-6">
        <a
          href="#inicio"
          class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors font-medium relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-teal-600 dark:after:bg-teal-400 after:transition-all hover:after:w-full"
          >Inicio</a
        >
        <a
          href="#servicios"
          class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors font-medium relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-teal-600 dark:after:bg-teal-400 after:transition-all hover:after:w-full"
          >Servicios</a
        >
        <a
          href="#citas"
          class="bg-teal-600 dark:bg-teal-500 text-white px-6 py-2 rounded-full hover:bg-teal-700 dark:hover:bg-teal-600 transition-all duration-300 font-medium shadow-lg shadow-teal-600/25 dark:shadow-teal-500/25 hover:shadow-xl hover:shadow-teal-600/30 dark:hover:shadow-teal-500/30 hover:-translate-y-0.5"
        >
          Agendar Cita
        </a>
        <ThemeToggle />
      </div>

      <!-- Mobile Menu Button & Theme Toggle -->
      <div class="flex items-center space-x-3 md:hidden">
        <ThemeToggle />
        <button
          id="mobile-menu-button"
          class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 focus:outline-none transition-colors"
          aria-label="Abrir menÃº"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden mt-4 pb-4 border-t border-gray-200 dark:border-gray-700 pt-4"
    >
      <div class="flex flex-col space-y-4">
        <a
          href="#inicio"
          class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors font-medium"
          >Inicio</a
        >
        <a
          href="#servicios"
          class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors font-medium"
          >Servicios</a
        >
        <a
          href="#citas"
          class="bg-teal-600 dark:bg-teal-500 text-white px-6 py-2 rounded-full hover:bg-teal-700 dark:hover:bg-teal-600 transition-colors font-medium text-center"
        >
          Agendar Cita
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
    });
  });
</script>
