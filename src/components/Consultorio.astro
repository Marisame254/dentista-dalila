---
const images = [
  {
    src: "/consul.png",
    alt: "Sala de tratamiento principal",
    title: "Sala de Tratamiento",
  },
  {
    src: "/radiografia.jpg",
    alt: "Equipos de última generación",
    title: "Tecnología Avanzada",
  },
  {
    src: "/consul.png",
    alt: "Sala de espera cómoda",
    title: "Sala de Espera",
  },
  {
    src: "/area_de_trabajo.jpg",
    alt: "Vista del consultorio",
    title: "Nuestro Espacio",
  },
];

const features = [
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>`,
    title: "Esterilización Certificada",
    description: "Protocolos de bioseguridad de primer nivel",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>`,
    title: "Equipos Modernos",
    description: "Tecnología digital de última generación",
  },
  {
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>`,
    title: "Ambiente Acogedor",
    description: "Espacios diseñados para tu comodidad",
  },
];
---

<section
  id="consultorio"
  class="py-20 bg-gray-50 dark:bg-gray-800 transition-colors duration-300"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span
        class="inline-block px-4 py-2 bg-teal-100 dark:bg-teal-900/50 rounded-full text-teal-700 dark:text-teal-300 text-sm font-medium mb-4"
      >
        Nuestras Instalaciones
      </span>
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4"
      >
        Conoce Nuestro Consultorio
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Un espacio moderno y acogedor diseñado para brindarte la mejor
        experiencia dental
      </p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-16">
      {
        images.map((image, index) => (
          <div
            class:list={[
              "group relative overflow-hidden rounded-2xl cursor-pointer",
              index === 0 ? "md:col-span-2 md:row-span-2" : "",
            ]}
          >
            <div
              class:list={[
                "aspect-square",
                index === 0 ? "md:aspect-auto md:h-full" : "",
              ]}
            >
              <img
                src={image.src}
                alt={image.alt}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                width="400"
                height="400"
                loading="lazy"
                decoding="async"
              />
            </div>
            {/* Overlay */}
            <div class="absolute inset-0 bg-linear-to-t from-gray-900/80 via-gray-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h3 class="text-white font-bold text-lg">{image.title}</h3>
                <p class="text-gray-300 text-sm">{image.alt}</p>
              </div>
            </div>
            {/* Corner accent */}
            <div class="absolute top-4 right-4 w-8 h-8 border-t-2 border-r-2 border-teal-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
          </div>
        ))
      }
    </div>

    <!-- Features -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="flex items-start gap-4 p-6 bg-white dark:bg-gray-900 rounded-2xl shadow-lg dark:shadow-gray-900/50 border border-gray-100 dark:border-gray-700">
            <div class="w-14 h-14 bg-teal-100 dark:bg-teal-900/50 rounded-xl flex items-center justify-center shrink-0">
              <svg
                class="w-7 h-7 text-teal-600 dark:text-teal-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={feature.icon}
              />
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
                {feature.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">
                {feature.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
