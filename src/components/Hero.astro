<section id="inicio" class="pt-20 bg-linear-to-br from-teal-50 via-white to-blue-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="space-y-6">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          Tu sonrisa perfecta comienza con
          <span class="text-teal-600">Dra. Dalila</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed">
          Cuidado dental profesional con tecnología de vanguardia y un trato humano excepcional.
          Más de 10 años transformando sonrisas.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a
            href="#citas"
            class="bg-teal-600 text-white px-8 py-4 rounded-full hover:bg-teal-700 transition-all duration-300 text-center font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            Agendar Cita Ahora
          </a>
          <a
            href="#servicios"
            class="bg-white text-teal-600 border-2 border-teal-600 px-8 py-4 rounded-full hover:bg-teal-50 transition-all duration-300 text-center font-semibold"
          >
            Ver Servicios
          </a>
        </div>

        <!-- Features -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 pt-8">
          <div class="flex items-center space-x-3">
            <svg class="w-6 h-6 text-teal-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-700 font-medium">Atención Personalizada</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-6 h-6 text-teal-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-700 font-medium">Tecnología Moderna</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-6 h-6 text-teal-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-700 font-medium">Resultados Garantizados</span>
          </div>
        </div>
      </div>

      <!-- Image/Visual -->
      <div class="relative">
        <div class="relative z-10 rounded-3xl overflow-hidden shadow-2xl bg-linear-to-br from-teal-100 to-blue-100 aspect-square flex items-center justify-center">
          <img
            src="/consul.png"
            alt="Consultorio dental de la Dra. Dalila"
            class="w-full h-full object-cover"
          />
        </div>

        <!-- Decorative elements -->
        <div class="absolute -bottom-6 -right-6 w-72 h-72 bg-teal-200 rounded-full opacity-20 blur-3xl"></div>
        <div class="absolute -top-6 -left-6 w-72 h-72 bg-blue-200 rounded-full opacity-20 blur-3xl"></div>
      </div>
    </div>
  </div>

  <!-- Wave Divider -->
  <div class="relative">
    <svg class="w-full h-12 md:h-16" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-white"></path>
    </svg>
  </div>
</section>
